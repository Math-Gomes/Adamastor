<Tooltip>:
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos

<InputWindow>:
    name: "main"
    alphabet: alphabet
    pattern: pattern

    FloatLayout:
        cols: 1

        FloatLayout:
            size: root.width, root.height/2

            Image:
                source: 'figs/img.png'
                keep_ratio: False
                allow_stretch: True
                opacity: 0.95
                size_hint: .2, .3
                pos_hint: {'center_x': .5, 'center_y': .75}
            
            Label:
                text: 'A D A M A S T O R'
                bold: True
                pos_hint: {'center_x': .5, 'center_y': .55}
                size_hint: .6, .08
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                # cursor_color: (1,1,1,1)
                hint_text: "Write the alphabet"
                pos_hint: {'center_x': .5, 'center_y': .44}
                size_hint: 0.4, 0.06
                id: alphabet
                multiline: False
                font_size: 20
                write_tab: False

            MyButton:
                pos_hint: {'center_x': .73, 'center_y': .44}
                size_hint: 0.05, 0.07
                icon: 'atlas://data/images/defaulttheme/filechooser_folder'
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "fileWindow"

            TextInput:
                # cursor_color: (1,1,1,1)
                hint_text: 'Write the pattern'
                pos_hint: {'center_x': .5, 'center_y': .35}
                size_hint: 0.4, 0.06
                id: pattern
                multiline: False
                font_size: 20
                on_text_validate:
                    root.manager.transition.direction = "right"
                    root.submitBtn()

            Button:
                pos_hint: {'center_x': .5, 'center_y': .2}
                size_hint: 0.2, 0.05
                font_size: 15
                text: "Submit"
                background_normal: ''
                background_color: rgba("#00549D")
                on_release:
                    root.manager.transition.direction = "up"
                    root.submitBtn()

<ResultsWindow>:
    name: "results"
    alphabet_id: alphabet_id
    pattern_id: pattern_id
    mean_id: mean_id

    FloatLayout:
        cols: 1

        FloatLayout:
            size: root.width, root.height/2
            
            Label:
                id: alphabet_id
                text: "Alphabet:"
                bold: True
                pos_hint: {'center_x': .5, 'center_y': .85}
                size_hint: .6, .08
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                id: pattern_id
                text: "Pattern:"
                bold: True
                pos_hint: {'center_x': .5, 'center_y': .74}
                size_hint: .6, .08
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                id: mean_id
                text: "Mean:"
                bold: True
                pos_hint: {'center_x': .5, 'center_y': .63}
                size_hint: .6, .08
                font_size: (root.width**2 + root.height**2) / 14**4

            Button:
                pos_hint: {'center_x': .2, 'center_y': .4}
                size_hint: 0.23, 0.05
                font_size: 15
                text: "See Finite State Machine"
                background_normal: ''
                background_color: rgba("#00549D")
                on_release:
                    root.showFSM()

            Button:
                # pos_hint: {'center_x': .7, 'center_y': .4}
                pos_hint: {'center_x': .5, 'center_y': .4}
                size_hint: 0.23, 0.05
                font_size: 15
                text: "See Equations"
                background_normal: ''
                background_color: rgba("#00549D")
                on_release:
                    root.showEquations()
            Button:
                pos_hint: {'center_x': .8, 'center_y': .4}
                size_hint: 0.23, 0.05
                font_size: 15
                text: "See Solved Equations"
                background_normal: ''
                background_color: rgba("#00549D")
                on_release:
                    root.showSolvedEquations()
            Button:
                pos_hint: {'center_x': .5, 'center_y': .2}
                size_hint: 0.23, 0.05
                font_size: 15
                text: "Return to Menu"
                background_normal: ''
                background_color: rgba("#00549D")
                on_release:
                    root.manager.transition.direction = "down"
                    root.returnToMenu() # app.root.current = "input"

<FileWindow>:
    fc: fc

    GridLayout:
        orientation: 'horizontal'
        rows: 2

        BoxLayout:
            size_hint_y: None
            height: 500
            FileChooserIconView:
                id: fc
                path: root.getPath()
                filters: ['*.txt']
                canvas.before:
                    Color:
                        rgb: .0, .0, .0
                    Rectangle:
                        pos: self.pos 
                        size: self.size 
                on_selection:
                    root.select(args) 

        FloatLayout:
            Button:
                pos_hint: {'center_x': .35, 'center_y': .4}
                size_hint: 0.2, 0.3
                text: "Return to Menu"
                background_normal: ''
                background_color: rgba("#00549D")
                on_release:
                    root.manager.transition.direction = "right"
                    root.back()

            Button:
                pos_hint: {'center_x': .65, 'center_y': .4}
                size_hint: 0.2, 0.3
                text: "Select File"
                background_normal: ''
                background_color: rgba("#00549D")
                on_release:
                    root.manager.transition.direction = "right"
                    root.open(fc.path, fc.selection)